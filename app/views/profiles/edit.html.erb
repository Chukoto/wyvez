<%= render "shared/header" %>

<div class="margin">
  <div class="title">
    あなたのプロフィール
  </div>

  <%= form_with model: @profile, url: profile_path, method: :patch, local: true do |f| %>

    <%= render 'shared/error_messages', model: f.object %>

    <div class="select-image">
      <div class="size-eighteen">
        <%= f.label :image, "プロフィール画像" %><br />
        <%= f.file_field :image %>
      </div>
    </div>

    <div class="size-eighteen">
      性転換歴
    </div>
    <div>
      <%= f.collection_select(:trans_exp_id, TransExp.all, :id, :name, {}, {class:"select-box", id:"trans-experience"}) %>
    </div>

    <div class="size-eighteen">
      パパ活歴
    </div>
    <div>
      <%= f.collection_select(:papa_exp_id, PapaExp.all, :id, :name, {}, {class:"select-box", id:"papa-experience"}) %>
    </div>
      

    <div class="size-eighteen">
      プロフィール
    </div>
    <div>
        <%= f.text_area :text, class:"text-text", id:"text_id", placeholder:"プロフィールを入力してください", rows: "5" %>
    </div>

      <%= f.submit "更新する", class: "profile-new-edit-update-btn" %>
  <% end %>

  <div class="go-back-homepage">
    <%=link_to "ホームへ戻る", root_path %>
  </div>
</div>

<%= render "shared/footer" %>
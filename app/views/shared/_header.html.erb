<header class='top-header'>
  <div class='header-margin'>
    <div class='wyvez-logo'>
    <%= image_tag 'wyvez-logo.PNG', class: 'wyvez-logo'%>
    </div>

    <% if user_signed_in? %>
      <div class='wyvez-menu'>
        <div class='menu-lists'>
          <li><%= link_to 'ホーム', root_path %></li>
          <li><%= link_to 'プロフィール', profile_path(current_user.id), class: "profile" %></li>
          <li><%= link_to 'ログアウト', destroy_user_session_path, method: :delete, class: "logout" %></li>
          <li><%= link_to 'ブックマークリスト', question_bookmarks_path(current_user.id) %></li>
          <li><%= link_to 'パパリスト', papa_path(current_user.id), class: "papa" %></li>
          <li><%= link_to '美容スケジュール', beauty_event_path(current_user.id), class: "beauty_event" %></li>
        </div>

        <div class='user-info'>
          <%= "#{current_user.nickname}でログイン中" %>
          <% if current_user.profile && current_user.profile.image.present? %>
            <div class='user-image'>
              <%= image_tag current_user.profile.image.variant(resize: '80x80'), class: "image"  %>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>

    <% unless user_signed_in? %>
      <div class='login-menu'>
        <div class='menu-lists'>
          <li><%= link_to 'ログイン', new_user_session_path, class: "login" %></li>
          <li><%= link_to '新規登録', new_user_registration_path, class: "sign-up" %></li>
        </div>
      </div>
    <% end %>
  </div>
</header>